{
    "Version": "2012-10-17",
    "Id": "VeryRestrictiveFullAccessPolicy",
    "Statement": [
        {
            "Sid": "AllowRestrictedPrincipals",
            "Effect": "Allow",
            "Principal": {
                "AWS": [
                    "arn:aws:iam::REPLACEME_ACCT_ID:role/application"
                ]
            },
            "Action": "s3:*",
            "Resource": [
                "arn:aws:s3:::REPLACEME_SENSITIVE_BUCKET",
                "arn:aws:s3:::REPLACEME_SENSITIVE_BUCKET/*"
            ]
        },
        {
            "Sid": "DenyEveryoneElse",
            "Effect": "Deny",
            "Principal": "*",
            "Action": "s3:*",
            "Resource": [
                "arn:aws:s3:::REPLACEME_SENSITIVE_BUCKET",
                "arn:aws:s3:::REPLACEME_SENSITIVE_BUCKET/*"
            ],
            "Condition": {
                "ArnNotEquals": {
                    "aws:PrincipalArn": [
                        "arn:aws:iam::REPLACEME_ACCT_ID:role/application"
                    ]
                }
            }
        }
    ]
}
